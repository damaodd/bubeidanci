<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">


    <Switch
            android:id="@+id/switch_accessibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Enable Accessibility Service" android:layout_centerInParent="true"/>

    <Switch
            android:id="@+id/switch_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch_accessibility"
            android:layout_marginTop="16dp"
            android:text="Floating Button Service" android:layout_centerInParent="true"/>




</RelativeLayout>
